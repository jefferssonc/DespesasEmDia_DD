<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/snow" /> <!-- Cor de fundo do EditText -->
    <corners android:radius="8dp" /> <!-- Raio dos cantos do EditText -->
    <stroke
        android:width="1dp"
        android:color="@color/black" /> <!-- Cor da borda do EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" /> <!-- Preenchimento interno do EditText -->
    <gradient
        android:startColor="@color/snow"
        android:centerColor="@color/white"
        android:endColor="@color/azure"
        android:angle="270" /> <!-- Gradiente de cores para efeito de realce -->
</shape>